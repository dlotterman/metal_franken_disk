[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart=/metal/prometheus/bin/prometheus-{{prometheus_version}}.linux-amd64/prometheus \
    --config.file /metal/prometheus/config/prometheus.yaml \
	--storage.tsdb.path /metal/prometheus/data/

[Install]
WantedBy=multi-user.target
